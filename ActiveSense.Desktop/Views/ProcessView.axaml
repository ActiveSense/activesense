<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ActiveSense.Desktop.Views.ProcessView">
    <StackPanel>

        <ItemsControl Margin="10">
            <Border>
                <ui:SettingsExpander Header="Choose a device for speaking or recording"
                                     IconSource="Microphone"
                                     Description="Apps might have their own settings"
                                     Name="SettingsExpander3">

                    <ui:SettingsExpanderItem Content="Headset"
                                             Description="Device Name" />
                    <ui:SettingsExpanderItem Content="This one has footer content"
                                             Description="Device Name">
                        <ui:SettingsExpanderItem.Footer>
                            <Button Content="Add new device" />
                        </ui:SettingsExpanderItem.Footer>
                    </ui:SettingsExpanderItem>
                    <ui:SettingsExpanderItem Content="This one is clickable"
                                             ActionIconSource="{StaticResource GoIcon}"
                                             IsClickEnabled="True" />
                </ui:SettingsExpander>
            </Border>
            <Border>
                <ui:SettingsExpander Header="General Cut Off Value"
                                     >
                    <ui:SettingsExpander.Footer>
                        <Slider Minimum="0" Maximum="100" Value="50" Width="160" />
                    </ui:SettingsExpander.Footer>
                </ui:SettingsExpander>
            </Border>
            <Border>
                <ui:SettingsExpander Header="Sleep Cutoff Value"
                                     >
                    <ui:SettingsExpander.Footer>
                        <Slider Minimum="0" Maximum="100" Value="50" Width="160" />
                    </ui:SettingsExpander.Footer>
                </ui:SettingsExpander>
            </Border>
            <Border>
                <ui:SettingsExpander Header="Activity Cutoff Value"
                                     >
                    <ui:SettingsExpander.Footer>
                        <Slider Minimum="0" Maximum="100" Value="50" Width="160" />
                    </ui:SettingsExpander.Footer>
                </ui:SettingsExpander>
            </Border>
        </ItemsControl>
    </StackPanel>
</UserControl>