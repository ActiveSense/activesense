<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:viewModels="clr-namespace:ActiveSense.Desktop.ViewModels"
             xmlns:global="clr-namespace:"
             xmlns:analysisPages="clr-namespace:ActiveSense.Desktop.ViewModels.AnalysisPages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ActiveSense.Desktop.Views.AnalysisPages.ActivityPageView"
             x:DataType="analysisPages:ActivityPageViewModel">
    <ScrollViewer>
        <Grid>
            <StackPanel>
                <!-- Steps Chart -->
                <Border Margin="10" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5">
                    <Grid RowDefinitions="Auto,*">
                        <TextBlock Grid.Row="0" Margin="10,10,10,0" FontWeight="Medium"
                                   Text="{Binding StepsChart.Title}" />
                        <lvc:CartesianChart
                            Grid.Row="1"
                            Series="{Binding StepsChart.Series}"
                            XAxes="{Binding StepsChart.XAxes}"
                            YAxes="{Binding StepsChart.YAxes}"
                            LegendPosition="{Binding StepsChart.LegendPosition}"
                            Margin="0,5,0,0"
                            MinHeight="300" />
                    </Grid>
                </Border>
                
                <!-- Activity Distribution Charts -->
                <Border Margin="10" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5"
                        BoxShadow="0 2 8 0 #15000000">
                    <ItemsControl ItemsSource="{Binding ActivityDistribtionChart}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Grid.Row="0" Margin="10,10,10,0" FontWeight="Medium"
                                               Text="{Binding Title}" />
                                    <lvc:CartesianChart
                                        Series="{Binding Series}"
                                        XAxes="{Binding XAxes}"
                                        YAxes="{Binding YAxes}"
                                        LegendPosition="{Binding LegendPosition}"
                                        Margin="0,5,0,0"
                                        MinHeight="300" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <!-- StackPanel arranges items vertically -->
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>