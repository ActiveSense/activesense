<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:analysisPages="clr-namespace:ActiveSense.Desktop.ViewModels.AnalysisPages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ActiveSense.Desktop.Views.AnalysisPages.SleepPageView"
             x:DataType="analysisPages:SleepPageViewModel">
    <Design.DataContext>
        <analysisPages:SleepPageViewModel />
    </Design.DataContext>
    <ScrollViewer>
        <Grid>
            <StackPanel>
                <!-- Bar Chart -->
                <Border Margin="10" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5"
                        BoxShadow="0 2 8 0 #15000000">
                    <Grid RowDefinitions="Auto,*">
                        <TextBlock Grid.Row="0" Margin="10,10,10,0" FontWeight="Medium"
                                   Text="{Binding TotalSleepChart.Title}" />
                        <TextBlock Grid.Row="1" Margin="10,2,10,0" Opacity="0.7" TextWrapping="Wrap"
                                   Text="{Binding TotalSleepChart.Description}" />
                        <lvc:CartesianChart
                            Grid.Row="1"
                            Series="{Binding TotalSleepChart.Series}"
                            XAxes="{Binding TotalSleepChart.XAxes}"
                            YAxes="{Binding TotalSleepChart.YAxes}"
                            LegendPosition="{Binding TotalSleepChart.LegendPosition}"
                            Margin="0,5,0,0"
                            MinHeight="300" />
                    </Grid>
                </Border>

                <!-- Pie Charts -->
                <Border Margin="10" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5"
                        BoxShadow="0 2 8 0 #15000000">
                    <ItemsControl ItemsSource="{Binding PieCharts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid RowDefinitions="Auto,*">
                                    <TextBlock Grid.Row="0" Margin="10,10,10,0" FontWeight="Medium"
                                               Text="{Binding Title}" />
                                    <lvc:PieChart
                                        Grid.Row="1"
                                        Series="{Binding PieSeries}"
                                        MinHeight="300"
                                        MinWidth="300"
                                        LegendPosition="Bottom"
                                        Margin="0,5,0,0" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>