<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:analysisPages="clr-namespace:ActiveSense.Desktop.ViewModels.AnalysisPages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ActiveSense.Desktop.Views.AnalysisPages.SleepPageView"
             x:DataType="analysisPages:SleepPageViewModel">
    <Design.DataContext>
        <analysisPages:SleepPageViewModel />
    </Design.DataContext>
    <ScrollViewer x:Name="MainScrollViewer"
                  VerticalScrollBarVisibility="Visible"
                  HorizontalScrollBarVisibility="Disabled">

        <StackPanel>
            <!-- Bar Chart -->
            <TextBlock Classes="header" Text="Tägliche Schritte" />
            <TextBlock Classes="description"
                       Text="Übersicht der durchschnittlichen Schritte pro Tag. Diese Daten zeigen die körperliche Aktivität im Verlauf der Zeit und helfen, Bewegungsmuster zu erkennen." />

            <Border Margin="10">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Margin="10,10,10,0" FontWeight="Medium"
                               Text="{Binding TotalSleepChart.Title}" />
                    <TextBlock Grid.Row="1" Margin="10,2,10,0" Opacity="0.7" TextWrapping="Wrap"
                               Text="{Binding TotalSleepChart.Description}" />
                    <Border Classes="Shadow" Theme="{DynamicResource CardBorder}">
                        <lvc:CartesianChart
                            Series="{Binding TotalSleepChart.Series}"
                            XAxes="{Binding TotalSleepChart.XAxes}"
                            YAxes="{Binding TotalSleepChart.YAxes}"
                            LegendPosition="{Binding TotalSleepChart.LegendPosition}"
                            Margin="0,5,0,0"
                            MinHeight="500"
                           />
                    </Border>
                </Grid>
            </Border>

            <!-- Pie Charts -->
            <TextBlock Classes="header" Text="Tägliche Schritte" />
            <TextBlock Classes="description"
                       Text="Übersicht der durchschnittlichen Schritte pro Tag. Diese Daten zeigen die körperliche Aktivität im Verlauf der Zeit und helfen, Bewegungsmuster zu erkennen." />

            <Border Margin="10">
                <ItemsControl ItemsSource="{Binding PieCharts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid RowDefinitions="Auto,*">
                                <TextBlock Grid.Row="0" Margin="10,10,10,0" FontWeight="Medium"
                                           Text="{Binding Title}" />
                                <Border Classes="Shadow" Theme="{DynamicResource CardBorder}">
                                    <lvc:PieChart
                                        Series="{Binding PieSeries}"
                                        MinHeight="300"
                                        MinWidth="300"
                                        LegendPosition="Bottom"
                                        Margin="0,5,0,0" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>