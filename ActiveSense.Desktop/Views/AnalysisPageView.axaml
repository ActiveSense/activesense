<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ActiveSense.Desktop.ViewModels"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:interfaces="clr-namespace:ActiveSense.Desktop.Interfaces"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ActiveSense.Desktop.Views.AnalysisPageView"
             x:DataType="viewModels:AnalysisPageViewModel">

    <Design.DataContext>
        <viewModels:AnalysisPageViewModel />
    </Design.DataContext>

    <Grid>
        <Grid IsVisible="{Binding !ShowSpinner}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="5">
                <Border Grid.Column="0"
                        Classes="card"
                        Padding="4"
                        HorizontalAlignment="Left">
                    <ListBox Name="tabSelector"
                             Background="Transparent"
                             BorderThickness="0"
                             ItemsSource="{Binding TabItems}"
                             SelectedItem="{Binding SelectedTabItem}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"
                                           Padding="16,8"
                                           FontWeight="Medium" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Margin" Value="2,0,2,0" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="CornerRadius" Value="12" />
                                <Setter Property="Transitions">
                                    <Transitions>
                                        <BrushTransition Property="Background" Duration="0:0:0.2" />
                                    </Transitions>
                                </Setter>
                            </Style>
                            <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#D8E5E9" />
                            </Style>
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="#0078D4" />
                                <Setter Property="TextBlock.Foreground" Value="White" />
                            </Style>
                        </ListBox.Styles>
                    </ListBox>
                </Border>

                <!-- Styled action buttons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <!-- Import/Download button - light style -->
                    <Button Padding="0"
                            Classes="Secondary"
                            Theme="{DynamicResource SolidButton}"
                            Width="36"
                            Height="36"
                            CornerRadius="12"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding TriggerExportDialogCommand}"
                            IsVisible="{Binding SelectedAnalyses.Count}"
                            ToolTip.Placement="Bottom"
                            ToolTip.ShowDelay="400">
                        <ToolTip.Tip>
                            <StackPanel Width="200">
                                <TextBlock Classes="h1" FontWeight="SemiBold">Export Analyses</TextBlock>
                                <TextBlock TextWrapping="Wrap" Margin="0,4,0,0">Export selected analyses as PDF documents for sharing or archiving</TextBlock>
                            </StackPanel>
                        </ToolTip.Tip>
                        <ui:SymbolIcon Symbol="Download" FontSize="16" Foreground="White" />
                    </Button>

                    <!-- Add/Plus button - dark style -->
                    <Button Padding="0"
                            Classes="Primary"
                            Theme="{DynamicResource SolidButton}"
                            Width="36"
                            Height="36"
                            CornerRadius="10"
                            Command="{Binding TriggerProcessDialogCommand}"
                            ToolTip.Placement="Bottom"
                            ToolTip.ShowDelay="400">
                        <StackPanel>
                            <ProgressBar
                                IsVisible="{Binding IsProcessingInBackground}"
                                Width="20"
                                Height="20"
                                IsIndeterminate="True"
                                Theme="{DynamicResource ProgressRing}"
                                Foreground="White"
                                ShowProgressText="False" />
                            <ui:SymbolIcon Symbol="Add" IsVisible="{Binding !IsProcessingInBackground}" FontSize="16" Foreground="White" />
                        </StackPanel>
                        <ToolTip.Tip>
                            <StackPanel Width="200">
                                <TextBlock Classes="h1" FontWeight="SemiBold">Add Files</TextBlock>
                                <TextBlock TextWrapping="Wrap" Margin="0,4,0,0">Upload and analyze new sensor data files</TextBlock>
                            </StackPanel>
                        </ToolTip.Tip>

                    </Button>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" Classes="card" Margin="5">
                <Grid ColumnDefinitions="3*, 1*">
                    <Border Grid.Column="0">
                        <ContentControl Content="{Binding SelectedTabItem.Page}" />
                    </Border>
                    <Border Grid.Column="1">
                        <Grid RowDefinitions="Auto, *">
                            <ListBox ItemsSource="{Binding ResultFiles}"
                                     SelectionMode="Multiple,Toggle"
                                     SelectionChanged="OnSelectionChanged"
                                     MinHeight="300"
                                     Background="Transparent"
                                     Margin="0,4,0,4">

                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>

                                <ListBox.ItemTemplate>
                                    <DataTemplate x:DataType="interfaces:IAnalysis">
                                        <Border
                                            CornerRadius="6"
                                            Padding="8,10"
                                            Margin="4,4"
                                            Background="White"
                                            BoxShadow="0 1 3 0 #15000000">
                                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">

                                                <!-- Icon when saved -->
                                                <ui:SymbolIcon Grid.Row="0"
                                                               Grid.Column="0"
                                                               Symbol="SaveFilled"
                                                               IsVisible="{Binding Exported}"
                                                               FontSize="18"
                                                               Foreground="#0078D4"
                                                               Margin="0,0,8,0"
                                                               VerticalAlignment="Center" />


                                                <!-- Icon when not saved -->
                                                <ui:SymbolIcon Grid.Row="0"
                                                               Grid.Column="0"
                                                               Symbol="Save"
                                                               IsVisible="{Binding !Exported}"
                                                               FontSize="18"
                                                               Foreground="LightGray"
                                                               Margin="0,0,8,0"
                                                               VerticalAlignment="Center" />

                                                <TextBlock Grid.Row="0"
                                                           Grid.Column="1"
                                                           Text="{Binding FileName}"
                                                           TextWrapping="NoWrap"
                                                           TextTrimming="CharacterEllipsis"
                                                           FontWeight="Medium"
                                                           VerticalAlignment="Center" />
                                                <ToolTip.Tip>
                                                    <StackPanel Width="200">
                                                        <TextBlock Classes="h1" FontWeight="SemiBold"
                                                                   Text="{Binding FileName}" />
                                                    </StackPanel>
                                                </ToolTip.Tip>

                                                <ItemsControl Grid.Row="1"
                                                              Grid.Column="1"
                                                              ItemsSource="{Binding Tags}"
                                                              Margin="0,6,0,6">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <!-- Use a Grid with two children - one for background, one for content -->
                                                            <Grid Margin="0,0,4,4">
                                                                <!-- Background element - this one gets opacity -->
                                                                <Border Background="{Binding Color}"
                                                                        Opacity="0.2"
                                                                        CornerRadius="12"
                                                                        BorderThickness="1"
                                                                        BorderBrush="{Binding Color}" />

                                                                <Border Padding="8,4"
                                                                        CornerRadius="12"
                                                                        Background="Transparent">
                                                                    <TextBlock Text="{Binding Name}"
                                                                               FontSize="11"
                                                                               FontWeight="SemiBold"
                                                                               Foreground="{Binding TextColor, FallbackValue=Black}" />
                                                                </Border>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>

                                <!-- Custom item container style -->
                                <ListBox.Styles>
                                    <Style Selector="ListBoxItem">
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="CornerRadius" Value="6" />
                                    </Style>

                                    <Style Selector="ListBoxItem:selected">
                                        <Setter Property="BorderBrush" Value="#0078D4" />
                                        <Setter Property="BorderThickness" Value="2" />
                                        <Setter Property="Background" Value="White" />
                                        <Setter Property="Margin" Value="0, 4" />
                                    </Style>
                                    <Style Selector="ListBoxItem:pointerover">
                                        <Setter Property="Cursor" Value="Hand" />
                                    </Style>
                                </ListBox.Styles>
                            </ListBox>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <Grid IsVisible="{Binding ShowSpinner}"
              Grid.Row="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Border Background="#80FFFFFF"
                    CornerRadius="8"
                    Padding="24"
                    BoxShadow="0 4 16 0 #20000000">
                <StackPanel Spacing="12">
                    <ProgressBar
                        Width="100"
                        Height="100"
                        IsIndeterminate="True"
                        Theme="{DynamicResource ProgressRing}"
                        ShowProgressText="False" />
                    <TextBlock Text="Daten werden geladen..."
                               HorizontalAlignment="Center"
                               FontWeight="Medium" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>