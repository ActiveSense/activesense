<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ActiveSense.Desktop.ViewModels"
             xmlns:models="clr-namespace:ActiveSense.Desktop.Models"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ActiveSense.Desktop.Views.AnalysisPageView"
             x:DataType="viewModels:AnalysisPageViewModel">

    <Design.DataContext>
        <viewModels:AnalysisPageViewModel />
    </Design.DataContext>

    <Grid>
        <Grid IsVisible="{Binding !ShowSpinner}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="5">
                <Border Grid.Column="0"
                        Background="#f5f5f5"
                        CornerRadius="12"
                        BorderThickness="0"
                        Padding="4"
                        HorizontalAlignment="Left">
                    <ListBox Name="tabSelector"
                             Background="Transparent"
                             BorderThickness="0"
                             ItemsSource="{Binding TabItems}"
                             SelectedItem="{Binding SelectedTabItem}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"
                                           Padding="16,8"
                                           FontWeight="Medium" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="CornerRadius" Value="12" />
                                <Setter Property="Transitions">
                                    <Transitions>
                                        <BrushTransition Property="Background" Duration="0:0:0.2" />
                                    </Transitions>
                                </Setter>
                            </Style>
                            <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#D8E5E9" />
                            </Style>
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="#A9A9A9" />
                                <Setter Property="TextBlock.Foreground" Value="White" />
                            </Style>
                        </ListBox.Styles>
                    </ListBox>
                </Border>

                <!-- Styled action buttons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <!-- Import/Download button - light style -->
                    <Button Padding="0"
                            Classes="Secondary"
                            Theme="{DynamicResource SolidButton}"
                            Width="36"
                            Height="36"
                            CornerRadius="12"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding TriggerExportDialogCommand}"
                            IsVisible="{Binding SelectedAnalyses.Count}"
                            ToolTip.Placement="Bottom"
                            ToolTip.ShowDelay="400">
                        <ToolTip.Tip>
                            <StackPanel Width="200">
                                <TextBlock Classes="h1" FontWeight="SemiBold">Export Analyses</TextBlock>
                                <TextBlock TextWrapping="Wrap" Margin="0,4,0,0">Export selected analyses as PDF documents for sharing or archiving</TextBlock>
                            </StackPanel>
                        </ToolTip.Tip>
                        <ui:SymbolIcon Symbol="Download" FontSize="16" Foreground="White" />
                    </Button>

                    <!-- Add/Plus button - dark style -->
                    <Button Padding="0"
                            Classes="Primary"
                            Theme="{DynamicResource SolidButton}"
                            Width="36"
                            Height="36"
                            CornerRadius="10"
                            Command="{Binding TriggerProcessDialogCommand}"
                            ToolTip.Placement="Bottom"
                            ToolTip.ShowDelay="400">
                        <ToolTip.Tip>
                            <StackPanel Width="200">
                                <TextBlock Classes="h1" FontWeight="SemiBold">Add Files</TextBlock>
                                <TextBlock TextWrapping="Wrap" Margin="0,4,0,0">Upload and analyze new sensor data files</TextBlock>
                            </StackPanel>
                        </ToolTip.Tip>
                        <ui:SymbolIcon Symbol="Add" FontSize="16" Foreground="White" />
                    </Button>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" Classes="card" Margin="5">

                <Grid ColumnDefinitions="3*, 1*">
                    <Border Grid.Column="0">
                        <ContentControl Content="{Binding SelectedTabItem.Page}" />
                    </Border>
                    <Border Grid.Column="1" Classes="card">
                        <Grid RowDefinitions="Auto, *">
                            <TextBlock Grid.Row="0"
                                       Text="VerfÃ¼gbare Analysen"
                                       Margin="8,4,8,12"
                                       FontWeight="SemiBold"
                                       FontSize="14" />

                            <Border Grid.Row="1"
                                    CornerRadius="8"
                                    Padding="4">
                                <ListBox ItemsSource="{Binding ResultFiles}"
                                         SelectionMode="Multiple,Toggle"
                                         SelectionChanged="OnSelectionChanged"
                                         MinHeight="300"
                                         Background="Transparent"
                                         Padding="0"
                                         Margin="0,4,0,4">
                                    
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>

                                    <ListBox.ItemTemplate>
                                        <DataTemplate x:DataType="models:Analysis">
                                            <Border
                                                CornerRadius="6"
                                                Padding="8,10"
                                                Margin="2,4"
                                                Background="White"
                                                BoxShadow="0 1 3 0 #15000000">
                                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
                                                    
                                                    <!-- Icon when saved -->
                                                    <ui:SymbolIcon Grid.Row="0"
                                                                   Grid.Column="0"
                                                                   Symbol="SaveFilled"
                                                                   IsVisible="{Binding Exported}"
                                                                   FontSize="18"
                                                                   Foreground="#0078D4"
                                                                   Margin="0,0,8,0"
                                                                   VerticalAlignment="Center" />

                                                    
                                                    <!-- Icon when not saved -->
                                                    <ui:SymbolIcon Grid.Row="0"
                                                                   Grid.Column="0"
                                                                   Symbol="Save"
                                                                   IsVisible="{Binding !Exported}"
                                                                   FontSize="18"
                                                                   Foreground="LightGray"
                                                                   Margin="0,0,8,0"
                                                                   VerticalAlignment="Center" />
                                                    
                                                    <TextBlock Grid.Row="0"
                                                               Grid.Column="1"
                                                               Text="{Binding FileName}"
                                                               TextWrapping="NoWrap"
                                                               TextTrimming="CharacterEllipsis"
                                                               FontWeight="Medium"
                                                               VerticalAlignment="Center" />

                                                    <!-- Details with smaller font -->
                                                    <StackPanel Grid.Row="1"
                                                                Grid.Column="1"
                                                                Margin="0,6,0,0"
                                                                Spacing="4">
                                                        <!-- Sleep data availability indicator -->
                                                        <StackPanel Orientation="Horizontal"
                                                                    Spacing="4"
                                                                    IsVisible="{Binding SleepRecords.Count}">
                                                            <ui:SymbolIcon Symbol="WeatherMoonFilled"
                                                                           FontSize="12"
                                                                           Foreground="#5E5E5E" />
                                                            <TextBlock Text="Sleep data"
                                                                       FontSize="12"
                                                                       Foreground="#5E5E5E" />
                                                        </StackPanel>

                                                        <!-- Activity data availability indicator -->
                                                        <StackPanel Orientation="Horizontal"
                                                                    Spacing="4"
                                                                    IsVisible="{Binding ActivityRecords.Count}">
                                                            <ui:SymbolIcon Symbol="WeatherSunnyFilled"
                                                                           FontSize="12"
                                                                           Foreground="#5E5E5E" />
                                                            <TextBlock Text="Activity data"
                                                                       FontSize="12"
                                                                       Foreground="#5E5E5E" />
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <!-- Selection indicator -->
                                                    <CheckBox Grid.Row="0"
                                                              Grid.Column="0"
                                                              Grid.RowSpan="2"
                                                              IsChecked="{Binding $parent[ListBoxItem].IsSelected}"
                                                              IsVisible="False" />
                                                </Grid>
                                                <ToolTip.Tip>
                                                    <StackPanel Width="200">
                                                        <TextBlock Classes="h1" FontWeight="SemiBold"
                                                                   Text="{Binding FileName}">
                                                        </TextBlock>
                                                    </StackPanel>
                                                </ToolTip.Tip>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>

                                    <!-- Custom item container style -->
                                    <ListBox.Styles>
                                        <Style Selector="ListBoxItem">
                                            <Setter Property="Padding" Value="0" />
                                            <Setter Property="Margin" Value="0" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="CornerRadius" Value="6" />
                                        </Style>
                                        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                            <Setter Property="Background" Value="Transparent" />
                                        </Style>
                                        <Style Selector="ListBoxItem:selected Border">
                                            <Setter Property="BorderBrush" Value="#0078D4" />
                                            <Setter Property="BorderThickness" Value="2" />
                                            <Setter Property="Background" Value="#F0F7FF" />
                                        </Style>
                                    </ListBox.Styles>
                                </ListBox>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <Grid IsVisible="{Binding ShowSpinner}"
              Grid.Row="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Border Background="#80FFFFFF"
                    CornerRadius="8"
                    Padding="24"
                    BoxShadow="0 4 16 0 #20000000">
                <StackPanel Spacing="12">
                    <ProgressBar
                        Width="100"
                        Height="100"
                        IsIndeterminate="True"
                        Theme="{DynamicResource ProgressRing}"
                        ShowProgressText="False" />
                    <TextBlock Text="Daten werden geladen..."
                               HorizontalAlignment="Center"
                               FontWeight="Medium" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>