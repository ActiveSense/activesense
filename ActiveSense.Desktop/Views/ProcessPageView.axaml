<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:viewModels="clr-namespace:ActiveSense.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ActiveSense.Desktop.Views.ProcessPageView"
             x:DataType="viewModels:ProcessPageViewModel">
    <ScrollViewer>
        <StackPanel Margin="20">
            <Grid Name="MainGrid" RowDefinitions="*, *" ColumnDefinitions="2*, *">
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0 0 8 0">
                    <TextBlock FontSize="20" FontWeight="Bold">Einstellungen</TextBlock>
                    <StackPanel Spacing="10" Margin="0 10 0 0">
                        <ui:SettingsExpander Header="Cut Off Schlaf"
                                             Name="SettingsExpander2">
                            <ui:SettingsExpander.Footer>
                                <ui:NumberBox Value="6.2" SimpleNumberFormat="F2" />
                            </ui:SettingsExpander.Footer>
                        </ui:SettingsExpander>
                        <ui:SettingsExpander Header="Cut Off AktivitÃ¤t">
                            <ui:SettingsExpander.Footer>
                                <ui:NumberBox Value="3.4" SimpleNumberFormat="F2" />
                            </ui:SettingsExpander.Footer>
                        </ui:SettingsExpander>
                    </StackPanel>
                    <TextBlock Text="{Binding StatusMessage}"></TextBlock>
                    <Button Margin="0 20" Command="{Binding ProcessFilesCommand}">Analysieren</Button>
                    <!-- <Button Command="{Binding TriggerDialog}">Dialog</Button> -->
                    <!-- Output Window -->
                    <Border Grid.Row="1"
                            BorderBrush="LightGray"
                            BorderThickness="0,1,0,0"
                            IsVisible="{Binding ShowScriptOutput, FallbackValue=false}">
                        <Grid RowDefinitions="Auto,*">
                            <TextBlock Grid.Row="0"
                                       Text="Script Output"
                                       FontWeight="SemiBold"
                                       Margin="20,10" />

                            <ScrollViewer Grid.Row="1"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          Margin="20,0,20,20">
                                <TextBox Text="{Binding ScriptOutput}"
                                         IsReadOnly="True"
                                         FontFamily="Consolas, Menlo, Monospace"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         MinHeight="200" />
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1">
                    <TextBlock FontSize="20" FontWeight="Bold">Dateien</TextBlock>
                    <Grid RowDefinitions="Auto,*,Auto" x:DataType="viewModels:ProcessPageViewModel">
                        <Border BorderThickness="1" BorderBrush="LightGray" MinHeight="200" CornerRadius="10"
                                Margin="0,10,0,20">
                            <ListBox ItemsSource="{Binding SelectedFiles}" Grid.Row="1" />
                        </Border>
                        <Button Content="Select Files"
                                Command="{Binding SelectFilesCommand}"
                                Grid.Row="2" />
                    </Grid>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>