<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:viewModels="clr-namespace:ActiveSense.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ActiveSense.Desktop.Views.ProcessPageView"
             x:DataType="viewModels:ProcessPageViewModel">
    
    <UserControl.Styles>
        <Style Selector="TextBlock.heading">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style Selector="TextBlock.subheading">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BoxShadow" Value="0 2 8 0 #15000000"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#106EBE"/>
        </Style>
        
        <Style Selector="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="MinHeight" Value="200"/>
        </Style>
    </UserControl.Styles>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid ColumnDefinitions="*, 16, 300" Margin="24">
            <StackPanel Grid.Column="0">
                
                <Border Classes="card">
                    <StackPanel>
                        <TextBlock Classes="subheading">Einstellungen</TextBlock>
                        
                        <ui:SettingsExpander Header="Cut Off Schlaf"
                                             Description="Legt den Schwellenwert für die Schlaferkennung fest"
                                             Margin="0,8,0,0">
                            <ui:SettingsExpander.Footer>
                                <ui:NumberBox Value="6.2" 
                                           SimpleNumberFormat="F2"
                                           ValidationMode="InvalidInputOverwritten" 
                                           SpinButtonPlacementMode="Compact"
                                           SmallChange="0.1"/>
                            </ui:SettingsExpander.Footer>
                        </ui:SettingsExpander>
                        
                        <ui:SettingsExpander Header="Cut Off Aktivität"
                                             Description="Legt den Schwellenwert für die Aktivitätserkennung fest"
                                             Margin="0,4,0,0">
                            <ui:SettingsExpander.Footer>
                                <ui:NumberBox Value="3.4" 
                                           SimpleNumberFormat="F2"
                                           ValidationMode="InvalidInputOverwritten"
                                           SpinButtonPlacementMode="Compact"
                                           SmallChange="0.1"/>
                            </ui:SettingsExpander.Footer>
                        </ui:SettingsExpander>
                    </StackPanel>
                </Border>
                
                <Border Classes="card">
                    <StackPanel>
                        <TextBlock Text="{Binding StatusMessage}" 
                                   Margin="0,0,0,16"
                                   TextWrapping="Wrap"/>
                        
                        <Button Classes="primary"
                                Command="{Binding ProcessFilesCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <ui:SymbolIcon Symbol="Play"/>
                                <TextBlock>Analyse starten</TextBlock>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
                
                <Border Classes="card" 
                        IsVisible="{Binding ShowScriptOutput, FallbackValue=false}">
                    <StackPanel>
                        <TextBlock Classes="subheading">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <ui:SymbolIcon Symbol="Code"/>
                                <TextBlock>Script Output</TextBlock>
                            </StackPanel>
                        </TextBlock>
                        
                        <Border Background="#F8F8F8" 
                                CornerRadius="4" 
                                Padding="12">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          MaxHeight="300">
                                <TextBox Text="{Binding ScriptOutput}"
                                         IsReadOnly="True"
                                         FontFamily="Consolas, Menlo, Monospace"
                                         Background="Transparent"
                                         BorderThickness="0"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <Rectangle Grid.Column="1" Fill="Transparent"/>
            
            <StackPanel Grid.Column="2">
                <Border Classes="card">
                    <Grid RowDefinitions="Auto, *, Auto">
                        <TextBlock Grid.Row="0" Text="Ausgewählte Dateien" FontWeight="Medium"/>
                        
                        <Border Grid.Row="1" 
                                Background="#F8F8F8"
                                CornerRadius="4"
                                Padding="8">
                            <ListBox ItemsSource="{Binding SelectedFiles}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="Auto, *" Margin="0,4">
                                            <ui:SymbolIcon Grid.Column="0" Symbol="Document" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding}" 
                                                       TextWrapping="Wrap"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>
                        
                        <Button Grid.Row="2" 
                                Classes="primary"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Command="{Binding SelectFilesCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <ui:SymbolIcon Symbol="Folder"/>
                                <TextBlock>Dateien auswählen</TextBlock>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>