 <Border
        CornerRadius="16"
        BorderThickness="0"
        Background="#F0F6F9"
        Width="500"
        BoxShadow="0 4 24 0 #20000000">
        <Grid RowDefinitions="Auto, *, Auto">
            <!-- Header -->
            <Grid Grid.Row="0"
                  Margin="24,24,24,0">
                <StackPanel>
                    <TextBlock Text="Export Analyses"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8" />
                    <TextBlock Text="Save analyses as PDF files"
                               FontSize="16"
                               Opacity="0.6"
                               Margin="0,4,0,20" />
                </StackPanel>
            </Grid>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="24,0" RowDefinitions="Auto,Auto,*">
                <!-- Path Selection Section -->
                <Border Grid.Row="0" 
                        Background="White"
                        CornerRadius="8"
                        BorderBrush="#E5E5E5"
                        BorderThickness="1"
                        Padding="16"
                        Margin="0,10,0,20">
                    <Grid RowDefinitions="Auto,Auto">
                        <TextBlock Grid.Row="0" 
                                   Text="Output Location" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,10"/>
                        
                        <Grid Grid.Row="1" ColumnDefinitions="*, Auto">
                            <TextBlock x:Name="OutputPathTextBlock" 
                                       Grid.Column="0"
                                       Text="{Binding OutputPath, FallbackValue='No folder selected'}"
                                       VerticalAlignment="Center"
                                       TextWrapping="Wrap"/>
                            
                            <Button x:Name="SaveAnalysesButton"
                                    Grid.Column="1"
                                    Padding="10"
                                    Background="#F0F0F0"
                                    BorderThickness="0"
                                    CornerRadius="4"
                                    Margin="10,0,0,0">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <ui:SymbolIcon Symbol="Folder" FontSize="16"/>
                                    <TextBlock Text="Browse"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- Status Section -->
                <Border Grid.Row="1" 
                        Background="White"
                        CornerRadius="8"
                        BorderBrush="#E5E5E5"
                        BorderThickness="1"
                        Padding="16"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Status" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="{Binding StatusMessage}" 
                                   TextWrapping="Wrap"/>
                        
                        <ProgressBar IsIndeterminate="{Binding IsExporting}"
                                     IsVisible="{Binding IsExporting}"
                                     Margin="0,10,0,0"
                                     Height="4"/>
                        
                        <!-- Success indicator -->
                        <StackPanel Orientation="Horizontal" 
                                    IsVisible="{Binding IsExportSuccessful}"
                                    Margin="0,10,0,0"
                                    Spacing="8">
                            <ui:SymbolIcon Symbol="Checkmark" 
                                           Foreground="Green"
                                           FontSize="16"/>
                            <TextBlock Text="Export completed successfully" 
                                       Foreground="Green"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Footer -->
            <Grid Grid.Row="2"
                  Margin="24,20"
                  ColumnDefinitions="Auto, *, Auto">

                <Button Grid.Column="0"
                        HorizontalAlignment="Left"
                        Command="{Binding CancelCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock>Cancel</TextBlock>
                    </StackPanel>
                </Button>

                <Button Grid.Column="2"
                        Classes="primary"
                        Command="{Binding ExportAnalysesCommand}"
                        IsEnabled="{Binding !IsExporting}"
                        HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ui:SymbolIcon Symbol="Save" FontSize="16" />
                        <TextBlock>Export</TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>