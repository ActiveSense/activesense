<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ActiveSense.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:ActiveSense.Desktop.Helpers"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="ActiveSense.Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="ActiveSense.Desktop">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="250,*">

        <!-- Sidebar -->
        <Grid Grid.Column="0"
              RowDefinitions="Auto,*,Auto"
              Background="#F0F0F0"
              Margin="0">

            <!-- File Picker Button at the top of sidebar -->
            <Button Grid.Row="0"
                    Content="Select Files"
                    Command="{Binding SelectFilesCommand}"
                    HorizontalAlignment="Stretch"
                    Margin="10"
                    Padding="10"
                    Background="#007ACC"
                    Foreground="White" />

            <!-- File List in sidebar -->
            <Grid Grid.Row="1" RowDefinitions="Auto,*" Margin="10,0,10,10">
                <TextBlock Grid.Row="0"
                           Text="Selected Files:"
                           FontWeight="Bold"
                           Margin="0,0,0,5" />

                <Border Grid.Row="1"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        CornerRadius="3"
                        Background="White">
                    <ScrollViewer>
                        <ListBox ItemsSource="{Binding SelectedFiles}"
                                 SelectionMode="Multiple"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=., Converter={StaticResource FileNameConverter}}"
                                               ToolTip.Tip="{Binding}"
                                               TextWrapping="Wrap" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Border>
            </Grid>

            <Button Grid.Row="2"
                    Content="Analyze"
                    Command="{Binding AnalyzeFiles}"
                    HorizontalAlignment="Stretch"
                    Margin="10"
                    Padding="10"
                    Background="#28A745"
                    Foreground="White" />
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" RowDefinitions="Auto,*,Auto" Margin="20">
            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="{Binding Greeting}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,10,0,20"
                       FontSize="18" />

            <!-- Main Content -->
            <Border Grid.Row="1"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="15">
                <Grid>
                    <TextBlock Text="Select CSV files and click 'Analyze' to view data"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Opacity="0.5"/>

                </Grid>
            </Border>
        </Grid>
    </Grid>

    <Window.Resources>
        <helpers:FileNameConverter x:Key="FileNameConverter" />
    </Window.Resources>
</Window>