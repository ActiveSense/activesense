<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:viewModels="clr-namespace:ActiveSense.Desktop.ViewModels.Charts"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ActiveSense.Desktop.Views.Charts.ActivityDistributionChartView"
             x:DataType="viewModels:ActivityDistributionChartViewModel">
    <Design.DataContext>
        <viewModels:ActivityDistributionChartViewModel />
    </Design.DataContext>
    
    <Grid ColumnDefinitions="*, Auto">
        <!-- Main Chart -->
        <Border Grid.Column="0" Margin="10" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5">
            <Grid RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" Margin="10,10,10,0" FontWeight="Medium">Daily Activity Distribution</TextBlock>
                <lvc:CartesianChart
                    Grid.Row="1"
                    Series="{Binding Series}"
                    XAxes="{Binding XAxes}"
                    YAxes="{Binding YAxes}"
                    LegendPosition="Right"
                    Margin="0,5,0,0"
                    MinHeight="300">
                </lvc:CartesianChart>
            </Grid>
        </Border>
        
        <!-- Right Panel with Pie Chart -->
        <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" 
                CornerRadius="5" Margin="0,10,10,10" Width="300">
            <Grid RowDefinitions="Auto,Auto,*">
                <TextBlock Grid.Row="0" 
                           Text="Overall Activity Distribution" 
                           HorizontalAlignment="Center"
                           FontWeight="Medium"
                           Margin="10,10,10,5"/>
                
                <!-- Pie Chart -->
                <lvc:PieChart
                    Grid.Row="1"
                    Series="{Binding PieSeries}"
                    MinHeight="300"
                    IsClockwise="false"
                    InitialRotation="-90"
                    LegendPosition="Bottom"
                   >
                </lvc:PieChart>
                
            </Grid>
        </Border>
    </Grid>
</UserControl>