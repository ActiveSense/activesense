<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Width="850"
             MaxHeight="800"
             xmlns:viewModels="clr-namespace:ActiveSense.Desktop.ViewModels"
             x:DataType="viewModels:ProcessDialogViewModel"
             xmlns:helperClasses="clr-namespace:ActiveSense.Desktop.Infrastructure.Process.Helpers"
             x:Class="ActiveSense.Desktop.Views.ProcessDialogView">

    <Design.DataContext>
        <viewModels:ProcessDialogViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <StyleInclude Source="/Assets/DialogStyles.axaml" />
    </UserControl.Styles>

    <Border Classes="dialog-container"
            Height="530"
            Width="650">
        <Grid RowDefinitions="Auto, *, Auto, Auto">
            <!-- Header -->
            <Grid Grid.Row="0" IsVisible="{Binding !IsProcessing}"
                  Margin="24,24,24,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="{Binding Title, FallbackValue='Add more files'}"
                                   Classes="dialog-title"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Button
                Command="{Binding HideCommand}"
                Width="32" Height="32"
                Margin="10"
                Padding="8"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Background="Transparent"
                BorderThickness="0">
                <PathIcon Data="{StaticResource arrow_minimize_regular}"></PathIcon>
            </Button>

            <!-- Content -->
            <ScrollViewer Grid.Row="1"
                          Padding="24,0,24,0"
                          VerticalScrollBarVisibility="Auto">
                <Grid ColumnDefinitions="*, 16, Auto" IsVisible="{Binding !IsProcessing}">
                    <!-- Left column - Settings -->
                    <StackPanel Grid.Column="0" Spacing="12">
                        <Border Classes="setting-card" MaxWidth="350">
                            <ScrollViewer Height="275">
                                <StackPanel Spacing="8">
                                    <ItemsControl ItemsSource="{Binding Arguments}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <ContentControl Content="{Binding}">
                                                    <ContentControl.DataTemplates>
                                                        <!-- Boolean argument template -->
                                                        <DataTemplate DataType="{x:Type helperClasses:BoolArgument}">
                                                            <Border Classes="setting-item">
                                                                <Grid ColumnDefinitions="*, Auto">
                                                                    <StackPanel Grid.Column="0">
                                                                        <TextBlock Text="{Binding Name}"
                                                                            Classes="setting-title" />
                                                                        <TextBlock Text="{Binding Description}"
                                                                            Classes="setting-description"
                                                                            TextWrapping="Wrap" />
                                                                    </StackPanel>
                                                                    <ToggleSwitch Grid.Column="1"
                                                                        IsChecked="{Binding Value}"
                                                                        OnContent="On"
                                                                        OffContent="Off"
                                                                        VerticalAlignment="Center" />
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>

                                                        <!-- Numeric argument template -->
                                                        <DataTemplate DataType="{x:Type helperClasses:NumericArgument}">
                                                            <Border Classes="setting-item">
                                                                <Grid ColumnDefinitions="*, Auto">
                                                                    <StackPanel Grid.Column="0">
                                                                        <TextBlock Text="{Binding Name}"
                                                                            Classes="setting-title" />
                                                                        <TextBlock Text="{Binding Description}"
                                                                            Classes="setting-description"
                                                                            TextWrapping="Wrap" />
                                                                    </StackPanel>
                                                                    <NumericUpDown Grid.Column="1"
                                                                        Value="{Binding Value}"
                                                                        Minimum="{Binding MinValue}"
                                                                        Maximum="{Binding MaxValue}"
                                                                        Increment="0.01"
                                                                        FormatString="F2"
                                                                        Width="100"
                                                                        VerticalAlignment="Center" />
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ContentControl.DataTemplates>
                                                </ContentControl>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                    </StackPanel>

                    <!-- Separator -->
                    <Rectangle Grid.Column="1" Fill="Transparent" />

                    <!-- Right column - File selection -->
                    <Border Grid.Column="2"
                            Classes="setting-card"
                            Width="240"
                            Height="300"
                            VerticalAlignment="Top">
                        <Grid RowDefinitions="Auto, *, Auto">
                            <Border Grid.Row="1"
                                    CornerRadius="6"
                                    Padding="6">
                                <Grid>
                                    <!-- "No files" message -->
                                    <TextBlock Text="Keine Dateien ausgewÃ¤hlt"
                                               IsVisible="{Binding SelectedFiles, Converter={x:Static ObjectConverters.IsNull}}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#888888"
                                               Margin="0,40,0,40" />
                 
                                    <!-- Files list -->
                                    <ListBox ItemsSource="{Binding SelectedFiles}"
                                             Background="Transparent"
                                             Padding="0"
                                             MaxHeight="300"
                                             IsVisible="{Binding SelectedFiles, Converter={x:Static ObjectConverters.IsNotNull}}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid ColumnDefinitions="Auto, *" Margin="0,3">
                                                    <PathIcon Data="{StaticResource folder_regular}" Height="15" Margin="0 0 5 0"></PathIcon>
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding}"
                                                               TextWrapping="NoWrap"
                                                               TextTrimming="CharacterEllipsis"
                                                               FontSize="12"
                                                               VerticalAlignment="Center"
                                                               MaxWidth="190">
                                                        <ToolTip.Tip>
                                                            <TextBlock Text="{Binding}" />
                                                        </ToolTip.Tip>
                                                    </TextBlock>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </Border>

                            <Button Grid.Row="2"
                                    Name="OpenFileButton"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    Margin="0,8,0,0"
                                    Classes="dialog-secondary-button">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <PathIcon Data="{StaticResource folder_add_regular}" Height="15"/>
                                    <TextBlock>Dateien auswÃ¤hlen</TextBlock>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>

            <Grid IsVisible="{Binding IsProcessing}"
                  Grid.Row="1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                <Border
                    Padding="24">
                    <StackPanel Spacing="12">
                        <ProgressBar
                            Width="100"
                            Height="100"
                            IsIndeterminate="{Binding !ShowProgress}"
                            Value="{Binding ProgressValue}"
                            Maximum="100"
                            Minimum="0"
                            Theme="{DynamicResource ProgressRing}"
                            ShowProgressText="False" />

                        <TextBlock Text="{Binding StatusMessage}"
                                   HorizontalAlignment="Center"
                                   FontWeight="Medium" />

                        <TextBlock Text="{Binding TimeRemaining}"
                                   IsVisible="{Binding ShowProgress}"
                                   HorizontalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="18" />
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Message section between content and footer -->
            <Border Grid.Row="2"
                    BorderThickness="1"
                    BorderBrush="#DDDDDD"
                    Background="#F6F6F6"
                    CornerRadius="4"
                    Padding="12"
                    Margin="24,16,24,0"
                    IsVisible="{Binding !IsProcessing}">
                <Grid ColumnDefinitions="Auto,*">
                    <PathIcon Grid.Column="0"
                           Data="{StaticResource info_regular}" 
                           Height="16"
                           VerticalAlignment="Top"
                           Margin="0,2,8,0" />
                    <TextBlock Grid.Column="1"
                       Text="{Binding ProcessingInfo}"
                       Classes="Primary"
                       TextWrapping="Wrap"
                       Foreground="#333333" />
                </Grid>
            </Border>

            <!-- Footer -->
            <Grid Grid.Row="3"
                  Margin="24,20"
                  ColumnDefinitions="Auto, *, Auto">
                
                <Button Grid.Column="0"
                        Classes="Secondary"
                        Command="{Binding CancelCommand}">
                    <TextBlock>Abbrechen</TextBlock>
                </Button>

                <Button Grid.Column="2"
                        Classes="Primary"
                        Theme="{DynamicResource SolidButton}"
                        Command="{Binding ProcessFilesCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock>Analysieren</TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>