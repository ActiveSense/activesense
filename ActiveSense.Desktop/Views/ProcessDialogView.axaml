<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Width="850"
             MaxHeight="800"
             xmlns:viewModels="clr-namespace:ActiveSense.Desktop.ViewModels"
             x:DataType="viewModels:ProcessDialogViewModel"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:models="clr-namespace:ActiveSense.Desktop.Models"
             x:Class="ActiveSense.Desktop.Views.ProcessDialogView">

    <Design.DataContext>
        <viewModels:ProcessDialogViewModel />
    </Design.DataContext>

    <!-- Reference to centralized styles -->
    <UserControl.Styles>
        <StyleInclude Source="/Assets/DialogStyles.axaml"/>
        <StyleInclude Source="/Assets/Styles.axaml"/>
    </UserControl.Styles>

    <Border Classes="dialog-container" Width="850">
        <Grid RowDefinitions="Auto, *, Auto">
            <!-- Header -->
            <Grid Grid.Row="0"
                  Margin="24,24,24,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="{Binding Title, FallbackValue='Add more files'}"
                                   Classes="dialog-title"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="Sensordaten analysieren."
                               Classes="dialog-subtitle" />
                </StackPanel>

                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding CancelCommand}"
                        Padding="8">
                    <ui:SymbolIcon Symbol="Dismiss" FontSize="16" />
                </Button>
            </Grid>

            <!-- Content -->
            <ScrollViewer Grid.Row="1"
                          Padding="24,0,24,0"
                          VerticalScrollBarVisibility="Auto">
                <Grid ColumnDefinitions="*, 16, Auto">
                    <!-- Left column - Settings -->
                    <StackPanel Grid.Column="0" Spacing="12">
                        <Border Classes="setting-card">
                            <StackPanel Spacing="8">
                                <ItemsControl ItemsSource="{Binding Arguments}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <ContentControl Content="{Binding}">
                                                <ContentControl.DataTemplates>
                                                    <!-- Boolean argument template -->
                                                    <DataTemplate DataType="{x:Type models:BoolArgument}">
                                                        <Border Classes="setting-item">
                                                            <Grid ColumnDefinitions="*, Auto">
                                                                <StackPanel Grid.Column="0">
                                                                    <TextBlock Text="{Binding Name}" 
                                                                               Classes="setting-title"/>
                                                                    <TextBlock Text="{Binding Description}" 
                                                                               Classes="setting-description"
                                                                               TextWrapping="Wrap"/>
                                                                </StackPanel>
                                                                <ToggleSwitch Grid.Column="1" 
                                                                             IsChecked="{Binding Value}"
                                                                             OnContent="On" 
                                                                             OffContent="Off"
                                                                             VerticalAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                    
                                                    <!-- Numeric argument template -->
                                                    <DataTemplate DataType="{x:Type models:NumericArgument}">
                                                        <Border Classes="setting-item">
                                                            <Grid ColumnDefinitions="*, Auto">
                                                                <StackPanel Grid.Column="0">
                                                                    <TextBlock Text="{Binding Name}" 
                                                                               Classes="setting-title"/>
                                                                    <TextBlock Text="{Binding Description}" 
                                                                               Classes="setting-description"
                                                                               TextWrapping="Wrap"/>
                                                                </StackPanel>
                                                                <NumericUpDown Grid.Column="1" 
                                                                             Value="{Binding Value}"
                                                                             Minimum="{Binding MinValue}"
                                                                             Maximum="{Binding MaxValue}"
                                                                             Increment="0.01"
                                                                             FormatString="F2"
                                                                             Width="100"
                                                                             VerticalAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ContentControl.DataTemplates>
                                            </ContentControl>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <Border Classes="setting-card">
                            <StackPanel Spacing="12">
                                <TextBlock Classes="dialog-section-title">Analysis Status</TextBlock>
                                <TextBlock Text="{Binding StatusMessage, FallbackValue='Ready to process files'}"
                                           Classes="dialog-content-text" />
                            </StackPanel>
                        </Border>
                        
                        <Border Classes="setting-card">
                            <StackPanel Spacing="12">
                                <TextBlock Classes="dialog-section-title">Analysis Output</TextBlock>
                                <ScrollViewer MaxHeight="220">
                                    <TextBox Text="{Binding ScriptOutput, FallbackValue='Waiting'}" />
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Separator -->
                    <Rectangle Grid.Column="1" Fill="Transparent" />

                    <!-- Right column - File selection -->
                    <Border Grid.Column="2"
                            Classes="setting-card"
                            Width="240"
                            VerticalAlignment="Top">
                        <Grid RowDefinitions="Auto, *, Auto">
                            <TextBlock Grid.Row="0"
                                       Text="Selected Files"
                                       Classes="dialog-section-title" />

                            <Border Grid.Row="1"
                                    CornerRadius="6"
                                    Padding="6"
                                    MinHeight="200"
                                    MaxHeight="280">
                                <ListBox ItemsSource="{Binding SelectedFiles}"
                                         Background="Transparent"
                                         Padding="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid ColumnDefinitions="Auto, *" Margin="0,3">
                                                <ui:SymbolIcon Grid.Column="0"
                                                               Symbol="Document"
                                                               FontSize="14"
                                                               Margin="0,0,6,0"
                                                               VerticalAlignment="Center" />
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding}"
                                                           TextWrapping="Wrap"
                                                           FontSize="12"
                                                           VerticalAlignment="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>

                            <Button Grid.Row="2"
                                    Name="OpenFileButton"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    Margin="0,8,0,0"
                                    Classes="dialog-secondary-button">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <ui:SymbolIcon Symbol="Folder" FontSize="14" />
                                    <TextBlock>Select Files</TextBlock>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>

            <!-- Footer -->
            <Grid Grid.Row="2"
                  Margin="24,20"
                  ColumnDefinitions="Auto, *, Auto">


                <Button Grid.Column="0"
                        Classes="Secondary"
                        Command="{Binding CancelCommand}">
                    <TextBlock>Cancel</TextBlock>
                </Button>

                <Button Grid.Column="2"
                        Classes="Primary"
                        Theme="{DynamicResource SolidButton}"
                        Command="{Binding ProcessFilesCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ui:SymbolIcon Symbol="Play" FontSize="16" />
                        <TextBlock>Analyse Starten</TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>