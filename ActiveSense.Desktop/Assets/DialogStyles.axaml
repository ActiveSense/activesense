<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Common Dialog Container -->
    <Style Selector="Border.dialog-container">
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="White" />
        <Setter Property="BoxShadow" Value="0 4 24 0 #20000000" />
        <Setter Property="Width" Value="550" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Dialog Header -->
    <Style Selector="TextBlock.dialog-title">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <Style Selector="TextBlock.dialog-subtitle">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Opacity" Value="0.6" />
        <Setter Property="Margin" Value="0,4,0,16" />
    </Style>

    <!-- Dialog Content -->
    <Style Selector="Border.dialog-content-panel">
        <Setter Property="Background" Value="White" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="BorderBrush" Value="#E5E5E5" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <Style Selector="TextBlock.dialog-section-title">
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Margin" Value="16,12" />
    </Style>

    <Style Selector="TextBlock.dialog-content-text">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Margin" Value="16,4,16,16" />
    </Style>

    <!--  -->
    <Style Selector="Border.setting-card">
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="#E5E5E5" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Margin" Value="0,0,0,12" />
        <Setter Property="Padding" Value="12" />
    </Style>
    <!-- Dialog Error Message - for error dialogs -->
    <Style Selector="TextBlock.dialog-error-message">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Menlo, monospace" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Margin" Value="16,4,16,16" />
    </Style>

</Styles>